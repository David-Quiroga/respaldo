<link rel="stylesheet" href="/css/registro.css">

<body>
    <section id="container">
        <header>Registrate</header>
        <center>¿Ya tienes una cuenta? <a href="/login">Inicia Sesion</a></center>
        <form action="/registro" method="POST" id="form">
            <div id="input-box">
                <label>Nombres Completos:</label>
                <input type="text" name="fullname" placeholder="Ingresa tus nombres completos" required />
            </div>
            <div id="input-box">
                <label>Usuario:</label>
                <input type="text" name="username" placeholder="Ingresa tus apellidos completos" required />
            </div>
            <div id="input-box">
                <label>Correo Electronico:</label>
                <input type="email"  name="email" placeholder="ejemplo@gmail.com" required />
            </div>
            <div id="input-box">
                <label>Contraseña:</label>
                <input type="password" name="password" placeholder="Ingrese una contraseña" required />
            </div>
            <div id="column">
            </div>
            <button type="submit" >Guardar</button>
        </form>
    </section>
</body>